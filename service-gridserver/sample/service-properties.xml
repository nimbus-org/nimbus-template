<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE server PUBLIC
  "-//Nimbus//DTD Nimbus 1.0//JA"
  "http://nimbus.sourceforge.jp/dtd/nimbus-service_1_0.dtd">

<server>
    
    <default-log>
        <debug output="false"/>
        <information output="false"/>
        <warning output="true"/>
        <error output="true"/>
        <fatal output="true"/>
    </default-log>
    
    <server-property name="GridServer.LOG_OUTPUT_PATH">./target/</server-property>
    <server-property name="GridServer.CACHE_OUTPUT_PATH">./target/cache/</server-property>
    
</server>