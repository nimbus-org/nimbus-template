<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE server PUBLIC
  "-//Nimbus//DTD Nimbus 1.0//JA"
  "http://nimbus.sourceforge.jp/dtd/nimbus-service_1_0.dtd">

<server>
    
    <default-log>
        <debug output="false"/>
        <information output="false"/>
        <warning output="true"/>
        <error output="true"/>
        <fatal output="true"/>
    </default-log>
    
    <server-property name="BatchServer.LOG_OUTPUT_PATH">./target/</server-property>
    <server-property name="BatchServer.BusinessJournal.JOURNAL_ENABLED">true</server-property>
    <server-property name="Template.Service.AOP.Interceptor.THREAD_CONTEXT_SERVICE_NAME">BatchServer.Log#ThreadContext</server-property>
    <server-property name="Template.Service.AOP.Interceptor.CONTEXT_SERVICE_NAME">BatchServer.Log#Context</server-property>
    
</server>