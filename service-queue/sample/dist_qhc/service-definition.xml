<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE server PUBLIC
  "-//Nimbus//DTD Nimbus 1.0//JA"
  "http://nimbus.sourceforge.jp/dtd/nimbus-service_1_0.dtd">

<server>
    
    <manager name="Sample.Service.Queue">
        
        <service name="QueueHandlerContainer"
                 template="Template.Service.Queue.QueueHandlerContainer#DistributedQueueHandlerContainer">
            <service-property name="Template.Service.Queue.QueueHandlerContainer.DIST_QUEUE_SELECTOR_SERVICE_NAME">#DistributedQueueSelector</service-property>
            <attribute name="IgnoreNullElement">true</attribute>
        </service>
        
        <service name="DistributedQueueSelector"
                 template="Template.Service.Queue.DistributedQueueSelector#InputPropertyDistributedQueueSelector">
            <attribute name="InputProperty">key</attribute>
        </service>
        
    </manager>
</server>