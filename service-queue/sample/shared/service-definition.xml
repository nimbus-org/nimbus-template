<server>
    
    <manager name="Sample.Service.Queue.Server" shutdown-hook="true">
        
        <manager-property name="Template.Service.Queue.SharedQueue.REQUEST_CONNECTION_FAC_SERVICE_NAME">Sample.Service.Publish.Server#RequestConnectionFactory</manager-property>
